
@*we are using dynamic view so its dynamic so no need to add directive*@ 
@*@model IEnumerable<BookModel>*@

@{
    ViewData["Title"] = "Get All Books";
}
<div class="container">
    <h3 class="display-3">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {


<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        @if (!string.IsNullOrWhiteSpace(book.CoverImgeUrl))
        {
            <img src="@book.CoverImgeUrl" alt="book" class="img-thumbnail" asp-append-version="true" />
        }
     else
        {
            <img src="~/images/book.jpg" alt="book" class="card-img-top" asp-append-version="true" />
        }

        <div class="card-body">
            <h3 class="card-title">@book.Title</h3>
            <p class="card-text">@book.Description</p>
            <div class="d-flex justify-content-between align-content-center">
                <div class="btn-group">
                    <a asp-route="bookDetailsRoute" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                </div>
                <small class="text-muted">@book.Author</small>
            </div>

        </div>
    </div>
            </div>
        }


    </div>
</div>
