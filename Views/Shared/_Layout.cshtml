<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark navbar-toggleable-sm bg-dark navbar-expand-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/bookstorelogo.png"  alt="bookstorelogo" width="40" height="40" />
                    Book Store
                </a>
                <button class="navbar-toggler mt-1" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarNav">
                    <ul class="navbar-nav">
                     
                        <li class="nav-item">
                        <a class="btn btn-outline-primary">Login</a> 
                        <a class="btn btn-primary">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/home/Aboutus">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/home/ContactUs">Contact</a>
                        </li>
                    </ul>
                </div></div>
        </nav>
        
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted text-center" style="line-height: 60px !important;">
        <div class="container">
            Copyright &copy; Book Store @DateTime.Now.Year
        </div>

    </footer>
</body>
</html>
